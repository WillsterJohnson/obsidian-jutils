{
  "compilerOptions": {
    "baseUrl": "./src/",
    "module": "ESNext",
    "target": "ES6",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "noEmit": true,
    "removeComments": false
  },
  "include": ["src/**/*.ts", "rollup.config.ts"]
}
